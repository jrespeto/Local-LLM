{
  "$schema": "https://opencode.ai/config.json",
  "model": "ollama/qwen3:8b",
  "small_model": "ollama/llama3.2:3b",
  "tools": {
	"bash": true,
	"write": true,
	"read": true,
	"webfetch": true,
	"edit": true,
	"grep": true,
	"glob": true,
	"list": true,
	"patch": true,
  "todoread": true,
  "todowrite": true
  },
  "formatter": {
    "clang-format": {
      "disabled": true
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama - openwebui",
      "options": {
        "baseURL": "http://localhost:8080/ollama/v1",
     "headers": {
          "Authorization": "Bearer sk-################################"
        }
      },
      "models": {
        "llama3.2:3b-16k":{
          "tools": true
        },
        "qwen3:8b-16k":{
          "tools": true
        }
      }
    }
  },
  "mcp": {
    "demo-mcp-remote": {
      "type": "remote",
      "url": "http://localhost:8081/mcp",
      "enabled": true
    }
  }
}
